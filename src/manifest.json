    }
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "tab-switch-shortcuts@tobiasneuschaefer",
      "strict_min_version": "139.0",
      "data_collection_permissions": {
        "required": ["none"]
      }
    }
  }
